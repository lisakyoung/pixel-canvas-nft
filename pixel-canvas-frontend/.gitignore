# Create .gitignore at the root
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
.pnp
.pnp.js

# Testing
coverage/
.nyc_output

# Next.js
.next/
out/
build/
dist/

# Production
*.local

# Debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# IDE
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Move/Sui build files
pixel_canvas/build/
pixel_canvas/target/
*.mv

# Lock files (optional - you might want to keep these)
# package-lock.json
# yarn.lock

# Misc
.turbo
.vercel
EOF